// data-choice
.data-choice
    margin: 30px 0px 55px
.choice-slider
    position relative
.choice-slider__item
    display: flex
    flex-direction: column
    align-items center
.choice-slider__date 
    text-transform uppercase
    font-weight 700
    font-size rem(14px)
    color: #191919
    margin-bottom 30px
.choice-slider .owl-nav
    position: absolute
    top: calc(50% - 6.5px)
    width 100%
    display: flex
    justify-content space-between
    z-index: -1
    .owl-prev
        position relative
        left: -14px
        size: 13px
        border-radius: 50%
        background #ea4728!important
        color: #fff!important
        transition: .3s
        span
            position: absolute
            top: -4px
            left: 4px
            font-size 14px
        &:hover
            opacity 0.7
    .owl-next
        position relative
        right: -14px
        size: 13px
        border-radius: 50%
        background #ea4728!important
        color: #fff!important
        transition: .3s
        span
            position: absolute
            top: -4px
            right: 3px
            font-size 14px
        &:hover
            opacity 0.7
// data-choice


// calendar
.ui-datepicker
    width 290px
    background #fff
    -webkit-box-shadow: 0px 0px 10px 0px rgba(153,153,153,1);
    -moz-box-shadow: 0px 0px 10px 0px rgba(153,153,153,1);
    box-shadow: 0px 0px 10px 0px rgba(153,153,153,1);
    .ui-datepicker-header
        background #85b9f3
        display: flex
        justify-content space-between
        align-items center
        padding: 0px 45px
        height 65px
        .ui-datepicker-prev
            order: 1
        .ui-datepicker-next
            order: 3
        .ui-datepicker-title
            font-weight 700
            font-size rem(18px)
            text-transform uppercase
            color: #fff
            order: 2
    .ui-datepicker-calendar
        position: relative  
        width 100%
        height 285px
        padding: 10px 15px 0px
    .ui-datepicker-calendar thead
        position: relative
    .ui-datepicker-calendar th span
        text-transform uppercase
        font-weight 400
    .ui-datepicker-calendar thead:after
        content: ""
        position: absolute
        top: 40px
        left: 15px
        display: block
        width calc(100% - 30px)
        height 1px
        background #d8d8d8
    .ui-datepicker-prev:before
        content: ""
        display: block
        width 10px
        height 2px
        background #fff
        transform: rotate(-45deg)
        position: relative
        bottom: 2px
    .ui-datepicker-prev:after
        content: ""
        display: block
        width 10px
        height 2px
        background #fff
        transform: rotate(45deg)
        position: relative
        top: 2px
    .ui-datepicker-next:before
        content: ""
        display: block
        width 10px
        height 2px
        background #fff
        transform: rotate(45deg)
        position: relative
        bottom: 2px
    .ui-datepicker-next:after
        content: ""
        display: block
        width 10px
        height 2px
        background #fff
        transform: rotate(-45deg)
        position: relative
        top: 2px
    .ui-datepicker-current-day
        position: relative
    .ui-state-active
        position: absolute
        top: calc( 50% - 20px )
        left: calc( 50% - 20px )
        size: 40px
        border-radius: 50%
        background #85b9f3
        font-weight 700
        color: #fff
    .ui-state-default
        display: flex
        justify-content center
        align-items center
        font-weight 400
        font-size rem(12px)
