        display: none 
    .gastranomic-route__text
        flex-direction: column
        align-items flex-start
        button 
            margin-top 15px
    .gastranomic-route__info-box
        flex-direction: column
        .icon
            margin-bottom 15px
@media only screen and (max-width : 576px)
