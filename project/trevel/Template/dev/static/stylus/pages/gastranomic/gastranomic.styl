// select
.select-hidden {
  display: none;
  visibility: hidden;
  padding-right: 10px;
}

.select {
  cursor: pointer;
  display: inline-block;
  position: relative;
  font-size: 14px;
  color: #52576a;
  width: 220px;
  height: 40px;
}

.select-styled {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: transparent;
  border: 2px solid #d1d1d1
    border-radius: 1px;
    width: 224px;
    height: 37px;
    padding-left 10px
    padding-right 10px
    display: flex
    align-items center
  -moz-transition: all 0.2s ease-in;
  -o-transition: all 0.2s ease-in;
  -webkit-transition: all 0.2s ease-in;
  transition: all 0.2s ease-in;
}
.select-styled:after {
  content: "";
  width: 0;
  height: 0;
  border: 5px solid transparent;
  border-color: #52576a transparent transparent transparent;
  position: absolute;
  top: 14px;
  right: 10px;
}
.select-styled:hover {
  
}
.select-styled:active, .select-styled.active {
  
}
.select-styled:active:after, .select-styled.active:after {
  top: 9px;
  border-color: transparent transparent #52576a transparent;
}

.select-options {
  display: none;
  position: absolute;
  top: 100%;
  right: 0;
  left: 0;
  z-index: 999;
  margin: 0;
  padding: 0;

  width 102%
  list-style: none;
  background-color #f1f2f3
  border: 2px solid #d1d1d1
}
.select-options li {
  margin: 0;
  padding: 8px 0;
  text-indent: 15px;
  border-bottom: 1px solid #d1d1d1;
  -moz-transition: all 0.15s ease-in;
  -o-transition: all 0.15s ease-in;
  -webkit-transition: all 0.15s ease-in;
  transition: all 0.15s ease-in;
}
.select-options li:last-child {
    border-bottom none
}
.select-options li:hover {
  color: #000;
  background: #fff;
}
.select-options li[rel="hide"] {
  display: none;
}






// adaptability
@media only screen and (max-width : 1200px) 
    .gastronomic-slider
        width 100%
        max-width: 630px;
    .gastronomic-galery
        max-width: 630px;
    .gastronomic-event-wrap
        justify-content flex-start
    .gastronomic-info,
    .gastronomic-info .gastronomic-info__item .info-box
        max-width: 100%
        width 100%
    .gastronomic-date
        max-width 100%
    .gastronomic-date .gastronomic-date__form
        flex-wrap: wrap
    .gastronomic-date .gastronomic-date__form .left
        flex-direction: row;
    .g-list-wrap
        display: flex
        flex-wrap: wrap
    .gastronomic-date .gastronomic-date__list
        margin-right 25px
    .gastronomic-date .gastronomic-date__form label.gastronomic-date__title
        margin-top: 10px;
        margin-right: 15px;
    .gastronomic-date .gastronomic-date__form .gastronomic-date__date
        margin-right 15px
    .gastronomic-date .gastronomic-date__form .right
        justify-content center
        padding-bottom 20px
    .gastronomic-date .gastronomic-date__form .left
