// gastronomic-date
.gastronomic-date
    max-width: 433px
    background #f1f2f3
    background-image url(../img/general/gastronomic-date-bg.png)
    background-repeat no-repeat
    background-position bottom center
    padding: 18px 18px 64px
    border-radius 3px
    box-shadow: 0px 6px 6px 0px rgba(211, 211, 211, 0.75);
    .gastronomic-date__title
        font-weight 700
        font-size 14px
        color: #191919
        margin-bottom rem(20px)
    .gastronomic-date__form
        display: flex
        margin-bottom 20px
        .left
            display: flex
            flex-direction: column
        .right
            display: flex
            flex-direction: column
            align-items flex-end
            justify-content flex-end
            width: 150px
        label.gastronomic-date__title
            text-transform uppercase
        input 
            margin-bottom 20px
        .gastronomic-date__date
            position: relative
            border: 2px solid #d1d1d1
            border-radius: 1px;
            width: 224px;
            height: 37px;
            padding-left 10px
            padding-right 10px
            background-color: transparent;
            background-image url(../img/general/calendar.png)
            background-repeat no-repeat
            background-position 90% 50%
            font-size 14px
            color: #52576a
            font-weight 700





    .gastronomic-date__list
        margin-bottom 10px
        li 
            padding-left 15px
            position relative
            font-weight 400
            font-size rem(14px)
            line-height rem(32px)
            &:before
                content: ""
                display: block
                position: absolute
                top: 12px
                left 0
                size (8px)
                border-radius: 50%
                background-color #bbb
                box-shadow: 0px 2px 2px 0px rgba(211, 211, 211, 0.75);
        .red:before
            background #ff5a43
        .green:before
            background #91c444
        .blue:before
            background #5b9de8
        .yellow:before
            background #ee9b00
        .violet:before
            background #ab67f8
        .gastronomic-date__title
            margin-bottom rem(10px)
        b
            font-weight 700
    .gastronomic-date__warning
        position relative
        border: 1px solid #ffc4c4
        border-radius: 4px
        padding: 18px 15px
        &:before
            content: "!"
            position: absolute
            right: -10px
            top: -20px
            display: flex
            justify-content center
            align-items center
            border-radius: 50%
            font-size rem(30px)
            color: #f1f2f3
            size (40px)
            background #ea4728

        .warning-text
            font-weight 400
            font-size rem(12px)
            line-height rem(18px)
            margin-bottom rem(20px)
            color: #191919
            a
                text-decoration underline
                cursor: pointer
        .warning-text:last-child
            margin-bottom: 0
