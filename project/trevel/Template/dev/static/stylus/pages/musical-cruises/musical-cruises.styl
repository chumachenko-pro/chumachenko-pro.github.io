// .way-nav
.way-nav
    padding: 1px
    display: flex
    flex-wrap: wrap
    padding: 12px 0px
.way-nav li
    position: relative
    padding: 5px 0px
    padding-left 15px
    margin-right 12px
.way-nav li:before
    content: ""
    position: absolute
    left: 0
    top: 13px
    display: block
    size: 4px
    border-radius: 50%
    background-color #515669
    margin-right 10px
.way-nav li:first-child:before
    display: none
.way-nav a
    font-size rem(14px)
    line-height: 1.5
    color: #85b9f3
    text-decoration underline
.way-nav li.active a 
    font-weight 400
    color: #515669
    text-decoration none
