@media only screen and (max-width : 768px) {
    .header-wrapper {
        flex-direction: column-reverse
    }
    .navigation .main-nav__wrap .logo {
        left: 0
        right 0
        top: calc(50% - 50px)
        margin: 0 auto    
        width 100px
        height 100px
    }
    .navigation .main-nav__wrap .logo img {
        height 100%
        width 100%
    }
    .top-line .top-line__wrap {
        flex-direction: column
    }
    .top-line .top-line__wrap .phone {
        font-size 23px
        margin-right 0
        margin-bottom 11px    
    }
    .top-line .top-line__wrap .phone img {
        size: 32px
        margin-right 5px
    }
    .top-line {
        padding: 18px 0px 22px
    }
}
