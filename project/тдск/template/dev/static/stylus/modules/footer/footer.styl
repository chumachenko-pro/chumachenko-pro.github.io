// Medium Devices, Desktops */
@media only screen and (max-width : 992px) {
	.second-nav a {
		font-size 1.2rem
	}
}
// Small Devices, Tablets
@media only screen and (max-width : 768px) {
	.footer-navigation {
		display: none
	}
	footer {
		border-top 5px solid #b8311b
	}
	.footer-greed {
		flex-direction: column;
	}
	footer .footer-greed .footer-greed__item {
		width: 100%
		justify-content center
		margin-bottom 35px
	}
	footer .footer-greed .footer-greed__item:last-child {
		margin-bottom 0
	}
	.top-line .top-line__wrap .phone {
		font-size 23px
		margin-right 0
		margin-bottom 11px    
	}
	.top-line .top-line__wrap .phone img {
		size: 32px
		margin-right 5px
	}
	footer .phone {
		margin-right: 0;
		font-size: 23px;
	}
	footer .phone img {
		size: 32px
		margin-right 5px
	}
}
// Extra Small Devices, Phones
@media only screen and (max-width : 576px) {
	.company-name {
		font-size rem(18px)	
	}
}
