.slogan
    background-image: url(../img/general/slogan-bg.png)
    background-position: center
    background-size: cover
    position: relative
    overflow: hidden
    .slogan-overlay
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        background-color: rgba(0, 0, 0, 0.27)
        z-index: 2
    .slogan__wrap
        min-height: 700px
        display: flex
        align-items: center
        justify-content: center
        h1
            text-transform: uppercase
            text-align: center
            font-size: rem(90px)
            flex-wrap: 700
            color: #fff
            position: relative
            z-index: 3

    




.video-background {
    position: absolute;
    top: 0;
    left: 0;
    width 100%;
    height 100%;
    z-index: 1;
}
.video-foreground,
.video-background iframe {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    pointer-events: none;
}
#vidtop-content {
    top: 0;
}
@media (min-aspect-ratio: 16/9) {
    .video-foreground { height: 300%; top: -100%; }
}
@media (max-aspect-ratio: 16/9) {
    .video-foreground { width: 300%; left: -100%; }
}



// production
// main styles for product section
.production
    padding: 68px 0px 84px
    background-image url(../img/general/background.png)
    h2
        text-align center
        margin-bottom rem(72px)

// calculator section
.main-calculator
    padding: 84px 0px 85px
    background-image url(../img/general/main-calculator-bg.png)
    background-size cover
    background-position 50% 50%
    h2
        text-align center
        color: #ffffff
        margin-bottom rem(22px)
    .main-calculator__subtitle
        font-weight 400
        text-align center
        font-size rem(30px)
        color: #92bed3
        margin-bottom rem(83px)



// advantages
.advantages
    background url(../img/general/background.png)
    padding: 102px 0px 128px
    h2
        text-align center
        margin-bottom rem(120px)


// advantages__greed
.advantages__greed
    display: flex
    justify-content: center
    flex-flow: row wrap
    .advantages__greed__item
        display: flex
        justify-content: center
        flex-basis: 25%


// advantages__item
.advantages__item
    display: flex
    flex-direction: column
    align-items center
    max-width: 300px
    padding: 0px 10px
    margin-bottom 67px
    .advantages__icon
        height: 135px
        display: flex
        align-items: center
        margin-bottom 30px
    .advantages__text
        font-weight 400
        font-size rem(20px)
        text-align center


// video
.video
    background-image: url(../img/general/video-bg.png)
    background-size: cover
    background-position: 50% 50%
    padding: 89px 0px 104px
    h3
        text-align: center
        color: #fff
        margin-bottom: rem(46px)
    .video__wrap
        display: flex
        justify-content: center
        iframe
            max-width: 853px
            width: 100%
            height: 479px






// Adaptability
// Large Devices, Wide Screens
@media only screen and (max-width : 1230px) {
    .advantages__greed .advantages__greed__item {
        flex-basis: 33.33%;
    }
}
// Medium Devices, Desktops */
@media only screen and (max-width : 992px) {
    .advantages__greed .advantages__greed__item {
        flex-basis: 50%;
    }
    .video .video__wrap iframe {
        height 400px    
    }
}
// Small Devices, Tablets
@media only screen and (max-width : 768px) {
    .advantages__greed .advantages__greed__item {
        flex-basis: 100%;
    }
    .slogan .slogan__wrap h1 {
        font-size: 4rem;    
    }
    .video-background {
        display: none
    }
    .slogan .slogan__wrap {
        min-height: 500px;
    }
    .video .video__wrap iframe {
        height 300px    
    }
}
// Extra Small Devices, Phones
@media only screen and (max-width : 576px) {
    .slogan .slogan__wrap {
        min-height: 260px;
    }
    .slogan .slogan__wrap h1 {
        font-size: rem(36px)  
    }
    .production {
        padding: 15px 0px 25px;
    }
    .production h2 {
        margin-bottom rem(15px)
    }
    .main-calculator {
        padding: 20px 0px 45px;
    }
    .main-calculator h2 {
        margin-bottom rem(15px)
    }
    .main-calculator .main-calculator__subtitle {
        font-size rem(16px)
        margin-bottom rem(15px)
    }
    .advantages {
        padding: 20px 0px 20px;
    }
    .advantages h2 {
        margin-bottom rem(25px)
    }
    .advantages__item {
        margin-bottom rem(40px)    
    }
    h3 {
        font-size rem(30px)    
    }
    .video {
        padding: 40px 0px 60px
    }
    .video .video__wrap iframe {
        height 160px    
    }
}
