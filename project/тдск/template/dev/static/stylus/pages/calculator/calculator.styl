.calculator-page
    background url(../img/general/background.png)
    .content
        padding-top 130px
        h2
            margin-bottom: 3.4375rem;

        .calculator-content
            background url(../img/general/calculator-page-bg.png)
            background-size cover
            background-position center
            padding: 80px 0px 100px
            .calculator-content__title
                font-weight 400
                font-size rem(30px)
                color: #fff
                text-align center
                margin-bottom: 5.625rem;
// Large Devices, Wide Screens
@media only screen and (max-width : 1230px) {
    .calculator__input-wrap--select {
        width: 100%;
        align-items: center;
    }
}
// Small Devices, Tablets
@media only screen and (max-width : 768px) {
    .calculator .calculator__wrap .calculator__input-wrap .select {
        width 100%
    }
    .calculator__wrap.calculator__wrap--one .calculator__input {
        width 165px
    }
    .calculator__wrap.calculator__wrap--two .calculator__input {
        width 250px
    }
    .calculator-page .content {
        padding-top 50px
    }
}
// Extra Small Devices, Phones
@media only screen and (max-width : 576px) {
    .calculator .calculator__wrap .calculator__input-wrap .calculator__input,
    .calculator .calculator__wrap .calculator__input-wrap,
    .calculator__wrap.calculator__wrap--one .calculator__input {
        width 100%
    }
    .calculator__wrap.calculator__wrap--two .calculator__input-wrap {
        margin-right 0
    }
    .calculator-page .content .calculator-content .calculator-content__title {
        font-size 1.3rem
        margin-bottom 2rem
    }
    .calculator .calculator__wrap .calculator__input-wrap {
        margin-bottom 20px
    }
    .calculator__input-wrap--select {
        align-items flex-start
    }
    .calculator__output .calculator__sum {
        font-size 18px!important
        text-align center
    }
    .calculator__output .calculator__total-sum {
        font-size 18px!important
        text-align center
    }
    .calculator__output {
        margin-bottom 20px
    }
    .calculator-page .content .calculator-content {
        padding: 25px 0px 50px    
    }
    .calculator .button.button--red {
        width: 100%
        max-width: 100%
    }
    .calculator-page .content h2 {
        margin-bottom 2rem
    }
}
        