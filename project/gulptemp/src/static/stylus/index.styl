// modal
.modal_div
	max-width: 500px; 
	background: #240000;
	padding: 25px
	border-radius: 7px

	position: fixed;
	top: 45%;
	left: 0;
	right: 0;
	margin: -192.5px auto;

	display: none;
	opacity: 0;
	z-index: 9999;
	&__title
		font-size rem(18px)
		margin-bottom 15px



.modal_div .modal_close
	width: 21px;
	height: 21px;
	position: absolute;
	top: -10.5px;
	right: -10.5px;
	cursor: pointer;
	display: block;
	border-radius: 50%
	background #000
	border	3px solid #fff
	color: #fff
	cursor: pointer
	&:hover
		i
			color: #db3b3b;
	i 
		position: relative
		top: -3px
		left: 3.7px
		font-size: 12px
		transition: .3s

