// header
.header
	&-inner
		position relative
		display: flex
		justify-content space-between
		align-items flex-start
		padding: 40px 0 23px
	&__logo
		text-transform uppercase
		font-size rem(24px)
		color: #fff
	&__nav
		display: flex;
		li
			margin-right 25px
			border-bottom 2px solid transparent
			padding-bottom: 15px
			transition: .3s
			&:last-child
				margin-right 0
			&:hover
				border-bottom 2px solid #c4bfbf
				a
					color: #c4bfbf
			 &.active
				border-bottom 2px solid #fff
				a
					color: #fff
			a
				font-size rem(18px)
				font-weight 700
				color: #c4bfbf
@media only screen and (max-width : 768px)
	.header
		&-inner
			align-items center
		&__nav
			position: absolute
			left: 0
			top: 100%
			display: none
			width 100%
			background-color #240000
			z-index 99;
			padding: 15px 0
			border: 1px solid #fff
			li
				text-align center
				margin-right 0
				padding: 10px 0
